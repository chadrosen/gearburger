<%= render :partial => "application/errors" %>

<div><%= link_to "back", admin_campaigns_url %></div>

<%= form_for([:admin, @campaign]) do |f| %>
	<table class="data">
		<tr>
			<th>Public ID</th>
			<td>
				<%= f.text_field :public_id %>
			</td>
		</tr>
		<tr>
			<th>Name</th>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr>
			<th>Description</th>
			<td><%= f.text_area :description %></td>
		</tr>	
		<tr>
			<th>Active</th>
			<td><%= f.check_box :active %></td>
		</tr>
	</table>
	<div style="margin-top: 10px;">
		<%= f.submit %>
	</div>
<% end %>