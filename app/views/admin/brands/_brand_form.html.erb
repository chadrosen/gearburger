<div><%= link_to "Back", admin_brands_url %></div>

<%= render :partial => "application/errors" %>

<%= form_for([:admin, @brand]) do |f| %>
	<table class="data">
		<tr>
			<th style="width: 200px;">Brand</th>
			<td>
				<%= f.text_field :name %>
			</td>
		</tr>
		<tr>
			<th>Active</th>
			<td><%= f.check_box :active %></td>
		</tr>
		<tr>
			<th>Popular</th>
			<td><%= f.check_box :popular %></td>
		</tr>
		<% unless @brand.new_record? %>
		<tr>
			<th>Users with this brand</th>
			<td><%= @users %></td>
		</tr>
		<tr>
			<th>Products with this brand</th>
			<td><%= @products %></td>
		</tr>
		<tr>
			<th>Map to brand</th>
			<td><%= select_tag "map_to", options_for_select(@brands, @mapped_to),
				:size => 20, :style => "width: 200px;" %></td>
		</tr>
		<% end %>
	</table>
	<div style="margin-top: 10px;">
		<%= f.submit 'Save' %>
	</div>
<% end %>